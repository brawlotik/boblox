local ReplicatedStorage = game:GetService("ReplicatedStorage")
local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")

local lp = Players.LocalPlayer
local speed = 20 -- Скорость перемещения (блоков в секунду)

-- Отправка событий в ReplicatedStorage
local function sendEvent(storage, id, action)
    local event = storage:FindFirstChild(id)
    if event then
        event:FireServer(action)
    end
end

-- Выполняем команды для "Patrol Police"
sendEvent(ReplicatedStorage, "3ZJ", "Patrol Police")
wait(1)
sendEvent(ReplicatedStorage.W2k, "1289a55e-6af1-4481-b43d-6633a8e28351", "Patrol Police")
wait(1)

-- Таблица с точками телепортации
local teleportPoints = {
    location1 = Vector3.new(-1684, 5, 2854)
}

-- Функция плавного перемещения
local function smoothTeleport(targetPosition)
    if lp.Character and lp.Character:FindFirstChild("HumanoidRootPart") then
        local rootPart = lp.Character.HumanoidRootPart
        local distance = (rootPart.Position - targetPosition).Magnitude
        local time = distance / speed -- Рассчитываем время движения

        local tweenInfo = TweenInfo.new(time, Enum.EasingStyle.Linear)
        local tween = TweenService:Create(rootPart, tweenInfo, {CFrame = CFrame.new(targetPosition)})
        tween:Play()
    end
end

-- Запускаем плавную телепортацию
smoothTeleport(teleportPoints.location1)
