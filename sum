local RunService = game:GetService("RunService")
local Lighting = game:GetService("Lighting")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer


-- üîª 2. –ú–∏–Ω–∏–º–∞–ª—å–Ω—ã–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ –≥—Ä–∞—Ñ–∏–∫–∏ –∏ –¥–∞–ª—å–Ω–æ—Å—Ç–∏
Lighting.GlobalShadows = false
Lighting.Brightness = 0
Lighting.ClockTime = 12
Lighting.FogStart = 0
Lighting.FogEnd = 100 -- —Å–∏–ª—å–Ω–æ –æ–≥—Ä–∞–Ω–∏—á–∏–≤–∞–µ–º –¥–∞–ª—å–Ω–æ—Å—Ç—å
Lighting.OutdoorAmbient = Color3.new(0, 0, 0)
Lighting.EnvironmentDiffuseScale = 0
Lighting.EnvironmentSpecularScale = 0
Lighting.ExposureCompensation = -5

-- üîª 3. –î–µ–ª–∞–µ–º –≤—Å–µ –±–ª–æ–∫–∏ –ø—Ä–æ–∑—Ä–∞—á–Ω—ã–º–∏ –∏ –æ—Ç–∫–ª—é—á–∞–µ–º —Ç–µ–Ω–∏
local function simplifyParts(obj)
	for _, part in ipairs(obj:GetDescendants()) do
		pcall(function()
			if part:IsA("BasePart") or part:IsA("MeshPart") then
				part.Transparency = 1
				part.CastShadow = false
				part.Material = Enum.Material.SmoothPlastic
			end
		end)
	end
end

-- üîª 4. –£–¥–∞–ª—è–µ–º –≤—Å–µ –∑–≤—É–∫–∏
local function removeSounds(obj)
	for _, sound in ipairs(obj:GetDescendants()) do
		pcall(function()
			if sound:IsA("Sound") then
				sound:Destroy()
			end
		end)
	end
end

-- üîª 5. –ü—Ä–∏–º–µ–Ω—è–µ–º –æ—á–∏—Å—Ç–∫—É –∫ –º–∏—Ä—É
simplifyParts(workspace)
removeSounds(workspace)

-- üîÑ –ê–≤—Ç–æ–æ—á–∏—Å—Ç–∫–∞ –Ω–æ–≤—ã—Ö –æ–±—ä–µ–∫—Ç–æ–≤
workspace.DescendantAdded:Connect(function(obj)
	wait(0.05)
	simplifyParts({obj})
	removeSounds({obj})
end)

-- üîÑ –ü–µ—Ä–∏–æ–¥–∏—á–µ—Å–∫–∞—è –ø–æ–≤—Ç–æ—Ä–Ω–∞—è –æ—á–∏—Å—Ç–∫–∞ (–Ω–∞ –≤—Å—è–∫–∏–π —Å–ª—É—á–∞–π)
while true do
	wait(15)
	simplifyParts(workspace)
	removeSounds(workspace)
end
