local RunService = game:GetService("RunService")
local Lighting = game:GetService("Lighting")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Выключить 3D рендеринг (полностью)
RunService:Set3dRenderingEnabled(false)

-- Снизить графику и освещение до минимума
Lighting.GlobalShadows = false
Lighting.Brightness = 0
Lighting.ClockTime = 14 -- белый день
Lighting.FogEnd = 100 -- ограничиваем дальность отрисовки
Lighting.FogStart = 0
Lighting.OutdoorAmbient = Color3.new(0, 0, 0)
Lighting.EnvironmentDiffuseScale = 0
Lighting.EnvironmentSpecularScale = 0
Lighting.ExposureCompensation = -5

-- Отключение теней от камеры
if workspace.CurrentCamera then
	workspace.CurrentCamera.FieldOfView = 40 -- уменьшить угол обзора
end

-- Удаляем все визуальные компоненты + текстуры
local function stripVisuals(object)
	for _, child in ipairs(object:GetDescendants()) do
		pcall(function()
			-- Визуальные эффекты
			if child:IsA("Decal") or child:IsA("Texture") or child:IsA("SurfaceGui") or
			   child:IsA("BillboardGui") or child:IsA("ParticleEmitter") or child:IsA("Trail") or
			   child:IsA("Beam") or child:IsA("Highlight") then
				child:Destroy()

			elseif child:IsA("BasePart") or child:IsA("MeshPart") then
				child.Material = Enum.Material.SmoothPlastic
				child.Transparency = 1
				child.Reflectance = 0
				child.CastShadow = false
				child.CanCollide = false
			end
		end)
	end
end

-- Очистка текущего мира
stripVisuals(workspace)

-- Удалить UI
for _, ui in ipairs(LocalPlayer:WaitForChild("PlayerGui"):GetChildren()) do
	pcall(function() ui:Destroy() end)
end

-- Следим за новыми объектами
workspace.DescendantAdded:Connect(function(obj)
	wait(0.05)
	stripVisuals({obj})
end)

-- Очищаем новых персонажей игроков (не трогаем своего)
Players.PlayerAdded:Connect(function(plr)
	plr.CharacterAdded:Connect(function(char)
		wait(1)
		if plr ~= LocalPlayer then
			stripVisuals(char)
		end
	end)
end)

-- Убираем звуки
for _, s in ipairs(workspace:GetDescendants()) do
	if s:IsA("Sound") then
		s:Destroy()
	end
end

-- Удаляем анимации и отключаем эффекты своего персонажа
LocalPlayer.CharacterAdded:Connect(function(char)
	wait(1)
	for _, child in ipairs(char:GetDescendants()) do
		if child:IsA("ParticleEmitter") or child:IsA("Trail") or child:IsA("Sound") then
			child:Destroy()
		end
	end
end)

-- Автоочистка каждые 15 секунд
while true do
	wait(15)
	stripVisuals(workspace)
end
